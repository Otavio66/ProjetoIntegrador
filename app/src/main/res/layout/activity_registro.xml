<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Container Principal -->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_bg"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Título do Incidente -->
        <TextView
            android:id="@+id/incident_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="TÍTULO DO INCIDENTE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        <!-- Imagem do Incidente -->
        <ImageView
            android:id="@+id/incident_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="Imagem do incidente"
            android:scaleType="centerCrop" />

        <!-- Linha de Separação -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="16dp"/>

        <!-- Localização do Incidente -->
        <TextView
            android:id="@+id/incident_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCALIZAÇÃO"
            android:textStyle="bold" />

        <!-- Descrição da Localização -->
        <!-- Aqui vai inserir as informações conforme o banco de dados -->
        <TextView
            android:id="@+id/incident_location_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aqui vai inserir as informações conforme o banco de dados"
            android:paddingTop="4dp"/>

        <!-- Linha de Separação -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="16dp"/>

        <!-- Categoria do Incidente -->
        <TextView
            android:id="@+id/incident_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CATEGORIA"
            android:textStyle="bold"/>

        <!-- Descrição da Categoria -->
        <!-- Aqui vai inserir as informações conforme o banco de dados -->
        <TextView
            android:id="@+id/incident_category_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Risco elétrico"
            android:paddingTop="4dp"/>

        <!-- Linha de Separação -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="16dp"/>

        <!-- Status do Incidente -->
        <TextView
            android:id="@+id/incident_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATUS"
            android:textStyle="bold"/>

        <!-- Descrição do Status -->
        <!-- Aqui vai inserir as informações conforme o banco de dados -->
        <TextView
            android:id="@+id/incident_status_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aberto"
            android:paddingTop="4dp"/>

        <!-- Linha de Separação -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="16dp"/>

        <!-- Descrição do Incidente -->
        <TextView
            android:id="@+id/incident_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESCRIÇÃO"
            android:textStyle="bold"/>

        <!-- Descrição do Incidente -->
        <!-- Aqui vai inserir as informações conforme o banco de dados -->
        <TextView
            android:id="@+id/incident_description_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uma parede da sala tem fiação elétrica exposta..."
            android:paddingTop="8dp"/>

        <!-- Linha de Separação -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="16dp"/>

        <!-- Classificação (RatingBar) -->
        <TextView
            android:id="@+id/incident_classification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLASSIFICAÇÃO"
            android:textStyle="bold"/>

        <!-- RatingBar para Classificação -->
        <RatingBar
            android:id="@+id/ratingRisco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Linha de Separação -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="16dp"/>

        <!-- Botão para Adicionar Novo Registro -->
        <Button
            android:id="@+id/addRegistroButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADICIONAR UM NOVO REGISTRO"
            android:textAllCaps="true"
            android:layout_marginTop="16dp"
            android:backgroundTint="#D3D3D3"
            android:textColor="#000000"
            android:padding="12dp"/>

    </LinearLayout>

</LinearLayout>