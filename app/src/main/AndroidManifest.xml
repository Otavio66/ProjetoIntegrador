<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" /> <!-- Remova se não estiver usando imagens -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PI3"
        tools:targetApi="31">

        <!-- LoginActivity como a tela inicial do app -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- CadastroActivity (não é exportada) -->
        <activity
            android:name=".CadastroActivity"
            android:exported="false"/>

        <!-- IncidentRegistrationActivity (não é exportada) -->
        <activity
            android:name=".IncidentRegistrationActivity"
            android:exported="false"/>

        <!-- InicialActivity (adicionada para que seja redirecionado após login) -->
        <activity
            android:name=".InicialActivity"
            android:exported="true" /> <!-- Certifique-se de que a InicialActivity está registrada -->

    </application>

</manifest>
